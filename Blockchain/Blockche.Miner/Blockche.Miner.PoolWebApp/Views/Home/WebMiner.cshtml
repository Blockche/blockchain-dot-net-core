<script src="~/lib/cryptojs/core-min.js"></script>
<script src="~/lib/cryptojs/sha256.js"></script>
<script src="~/js/web-miner.js"></script>

<div id="startup-wrapper" class="row">
    <div class="col-md-12">
        <input type="text" id="user-input" placeholder="User" />
        <input type="text" id="worker-input" placeholder="Worker" />
        <button id="start-btn">Start mining</button>
    </div>
</div>

<div id="mining-wrapper" hidden>
    <div class="row">
        <div class="col-md-3">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">User</h3>
                </div>
                <div class="panel-body">
                    <span id="user"></span>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Worker</h3>
                </div>
                <div class="panel-body">
                    <span id="worker"></span>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Hashrate (Mh/s)</h3>
                </div>
                <div class="panel-body">
                    <span id="hashrate">0</span>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Submited blocks</h3>
                </div>
                <div class="panel-body">
                    <span id="submitedblocks">0</span>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <h1>Last submited blocks</h1>
        <div class="col-md-12">
            <table class="table table-striped table-hover ">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Hash</th>
                    </tr>
                </thead>
                <tbody id="last-blocks-grid"></tbody>
            </table>
        </div>
    </div>
</div>